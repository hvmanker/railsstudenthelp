<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="with=device-width, intitial">
       <title>HELPDESK</title> 
       <%= stylesheet_link_tag "style.css"%>

       <link rel="preconnect" href="https://fonts.googleapis.com">
       <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
       <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    </head>

    <body>
        <section class="sub-header">
            <nav>
                <%= link_to root_path do %>
                    <%=image_tag "logo.png"%>
                <% end %>   
                <div class="nav-links">
                    <ul>
                        <li><%=link_to "HOME",root_path%></li>
                        <li><%=link_to "CONTACT",root_path%></li>
                        <li><%= link_to "SIGN OUT",  destroy_user_session_path%></li>
                        <li><%= link_to "EDIT PROFILE", edit_user_registration_path%></li>

                    </ul>
                </div>
            </nav>

            <h1>UPSKILL</h1>
            <%= form_tag home_upskill_path, method: :get do %>
  <%= label_tag :search_keyword, "Search keyword:" %>
  <%= text_field_tag :search_keyword %>
  <%= submit_tag "Search" %>
<% end %>
            <br/><br/><br/><br/><br/><br/>
             <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                <tr>
                    <th>TITLE</th>
                    <th>LINK</th>
                </tr>
                </thead>
                <tbody>
                    <% if @result %>
                    <% @result.first(5).each do |result| %>
                        <tr>
                            <td><%= result['title'] %></td>
                            <td><%= result['link'] %></td>
                        </tr>
                    <% end %>
                    <% end %>
                </tbody>
            </table>
         
             
        </section>
      
    </body>
</html>